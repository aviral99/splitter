<div class="page-header"
<h1><u><strong>All events</strong></u></h1>
</div>

<%= link_to "Add a new event" , new_event_path, class: "btn btn-primary" %> <br> <br>


<% @events.each do |event| %>
<div class="event">
  <span class:"admin">
   <b><%= "Event: " %></b><strong><%= event.name %></strong><i><%= " on " %></i><i><%= event.time %></i> <br>

   <em><%= event.people %></em><i><%= " people attended" %></i> <br>

   <i><%= "Total expenditure = " %></i><em><%=event.expenditure %></em><i><%= "$" %></i> <br>

   <div class="meta">
     <%= link_to time_ago_in_words(event.created_at) + " ago", event %>|
     <%= link_to "Edit", edit_event_path(event) %> |
     <%= link_to "Delete", event, method: :delete, data: {confirm: "Are you sure you want to delete this event?"} %>
     
   </div>
  </span>
</div>


<% end %>

